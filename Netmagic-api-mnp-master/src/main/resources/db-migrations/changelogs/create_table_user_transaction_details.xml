<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet id="beforeCreatingTable" author="Sudharani">
		<tagDatabase tag="before_create_table_user_tran_deta_desc" />
	</changeSet>

	<changeSet id="createTableTransactionDetail" author="Sudharani">
		<createTable tableName="user_tran_deta_desc">
			<column name="tran_deta_id_pk" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="tran_status" type="boolean" defaultValueBoolean="false"/>
			<column name="tran_create_date_time" type="timestamp"  >
				<constraints nullable="false" />
			</column>
			<column name="tran_last_retrival_date_time" type="timestamp" />
			<column name="tran_retrive_count" type="int" />
			<column name="tran_busn_unit" type="varchar(255)" />
			<column name="othr_sour_conf_sour_id_pk" type="int">
				<constraints nullable="false" foreignKeyName="othr_sour_conf_sour_id_pk"
					references="othr_sour_conf(sour_id_pk)" />
			</column>
			<column name="mas_user_tran_info_id_fk" type="bigint">
				<constraints nullable="false" foreignKeyName="mas_user_tran_info_id_fk"
					references="mas_user_tran_info(user_tran_id_pk)" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog> 
